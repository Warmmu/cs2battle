/**app.wxss**/
page {
  background: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 通用按钮样式 */
button::after {
  border: none;
}

button {
  border: none;
  outline: none;
}

button[disabled] {
  opacity: 0.6;
}

/* 通用输入框样式 */
input {
  box-sizing: border-box;
}

/* 通用文本样式 */
text {
  font-family: inherit;
}

/* 通用颜色变量 */
page {
  --primary-color: #667eea;
  --secondary-color: #764ba2;
  --success-color: #52c41a;
  --error-color: #ff4d4f;
  --warning-color: #faad14;
  --text-primary: #333;
  --text-secondary: #666;
  --text-tertiary: #999;
  --border-color: #eee;
  --bg-color: #f5f5f5;
}
