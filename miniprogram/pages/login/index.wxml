<!--登录页面-->
<view class="container">
  <view class="header">
    <text class="title">CS2 BP系统</text>
    <text class="subtitle">登录账号</text>
  </view>

  <view class="form">
    <view class="input-group">
      <text class="label">昵称</text>
      <input 
        class="input" 
        placeholder="请输入您的昵称" 
        value="{{nickname}}"
        bindinput="onNicknameInput"
      />
    </view>

    <button class="login-btn" bindtap="onLogin">登录</button>
    
    <view class="footer">
      <text class="tip">还没有账号？</text>
      <text class="link" bindtap="onGoRegister">立即注册</text>
    </view>
  </view>
</view>

