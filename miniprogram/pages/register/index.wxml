<!--注册页面-->
<view class="container">
  <view class="header">
    <image class="logo" src="/images/icons/home.png" mode="aspectFit"></image>
    <text class="title">CS2 内战匹配系统</text>
    <text class="subtitle">欢迎注册</text>
  </view>

  <view class="form">
    <view class="form-item">
      <text class="label">昵称 *</text>
      <input 
        class="input" 
        placeholder="请输入游戏昵称" 
        value="{{nickname}}"
        bindinput="onNicknameInput"
        maxlength="20"
      />
    </view>

    <view class="form-item">
      <text class="label">Steam ID (可选)</text>
      <input 
        class="input" 
        placeholder="请输入 Steam ID" 
        value="{{steam_id}}"
        bindinput="onSteamIdInput"
        maxlength="30"
      />
    </view>

    <button class="register-btn" bindtap="onRegister">
      注册并开始
    </button>
    
    <view class="footer">
      <text class="tip">已有账号？</text>
      <text class="link" bindtap="onGoLogin">立即登录</text>
    </view>
  </view>

  <view class="tips">
    <text class="tip-text">• 昵称将在游戏中显示</text>
    <text class="tip-text">• 初始 ELO 为 1000</text>
    <text class="tip-text">• 通过比赛提升你的排名</text>
  </view>
</view>

