/* BP 地图页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
  color: #fff;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.current-action {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}

.action-team {
  font-size: 28rpx;
  font-weight: bold;
}

.action-type {
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.teams {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.team {
  flex: 1;
  text-align: center;
}

.team-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #667eea;
}

.team-b .team-name {
  color: #764ba2;
}

.team-players {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.player {
  font-size: 24rpx;
  color: #666;
}

.vs {
  font-size: 32rpx;
  font-weight: bold;
  color: #999;
  margin: 0 20rpx;
}

.bp-history {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.history-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.history-item.ban {
  background: #fff2f0;
  border-left: 4rpx solid #ff4d4f;
}

.history-item.pick {
  background: #f6ffed;
  border-left: 4rpx solid #52c41a;
}

.history-team {
  font-weight: bold;
  color: #333;
}

.history-action {
  color: #666;
}

.history-map {
  flex: 1;
  text-align: right;
  font-weight: bold;
  text-transform: capitalize;
}

.maps {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.map-item {
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  background: #fff;
}

.map-item.disabled {
  opacity: 0.5;
}

.map-image {
  width: 100%;
  height: 250rpx;
  background: #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.map-placeholder {
  width: 100%;
  height: 250rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.map-name-large {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-transform: uppercase;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.3);
}

.map-name {
  display: block;
  text-align: center;
  padding: 15rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  text-transform: capitalize;
}

.map-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
}

.overlay-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.tips {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

