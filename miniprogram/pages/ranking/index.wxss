/* 排行榜页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.refresh-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border-radius: 20rpx;
}

.ranking {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.rank-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.rank-item.self {
  background: linear-gradient(135deg, #fff9e6 0%, #ffe6e6 100%);
  border: 2rpx solid #FFD700;
}

.rank-badge {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
  flex-shrink: 0;
}

.rank-badge.top1 {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(255, 215, 0, 0.4);
}

.rank-badge.top2 {
  background: linear-gradient(135deg, #C0C0C0 0%, #808080 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(192, 192, 192, 0.4);
}

.rank-badge.top3 {
  background: linear-gradient(135deg, #CD7F32 0%, #8B4513 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(205, 127, 50, 0.4);
}

.player-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.player-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.player-stats {
  display: flex;
  gap: 15rpx;
}

.stat {
  font-size: 22rpx;
  color: #999;
}

.elo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
}

.elo-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
}

.elo-label {
  font-size: 20rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

.loading {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
  font-size: 26rpx;
}

