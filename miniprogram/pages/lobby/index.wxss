/* 大厅页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.header {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.welcome {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.logout-btn {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 20rpx;
}

.actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  background: #667eea;
  color: #fff;
  border-radius: 20rpx;
}

.main {
  background: #fff;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
}

.empty {
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.join-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 40rpx;
  margin: 0 auto;
}

.room {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.room-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.leave-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 20rpx;
}

.players {
  margin-bottom: 30rpx;
}

.player-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  border: 2px solid transparent;
}

.player-item.ready {
  background: #f6ffed;
  border-color: #52c41a;
}

.player-info {
  display: flex;
  flex-direction: column;
}

.player-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.player-elo {
  font-size: 24rpx;
  color: #999;
}

.player-status {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 24rpx;
  color: #52c41a;
}

.player-item:not(.ready) .status-text {
  color: #999;
}

.room-footer {
  text-align: center;
}

.ready-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
}

.tips {
  padding: 20rpx;
}

.tips text {
  font-size: 24rpx;
  color: #999;
}

