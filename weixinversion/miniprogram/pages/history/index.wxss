/* 历史战绩页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
  color: #fff;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.matches {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.match-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 25rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  border-left: 6rpx solid #52c41a;
}

.match-item.loss {
  border-left-color: #ff4d4f;
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.result-badge {
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  background: #52c41a;
}

.result-badge.loss {
  background: #ff4d4f;
}

.match-date {
  font-size: 24rpx;
  color: #999;
}

.match-info {
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #999;
  width: 100rpx;
}

.value {
  color: #333;
  font-weight: 500;
}

.value.map {
  text-transform: capitalize;
}

.value.score {
  font-weight: bold;
  color: #667eea;
}

.match-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
}

.stat-item.positive .stat-value {
  color: #52c41a;
}

.stat-item.negative .stat-value {
  color: #ff4d4f;
}

.mvp-badge {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #fff;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(255, 215, 0, 0.3);
}

.empty {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #ccc;
}

.loading, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

